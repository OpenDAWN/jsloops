html
	head
		title JSLoops - Music Making App
		link(rel="stylesheet",href="lib/font-awesome/css/font-awesome.css")
		link(rel="stylesheet",href="css/style.css")
	body
		.layout
			.header
				.logo
					i.fa.fa-music
					span JSLoops
				.indicators
					span BPM
					input#bpm(value="120")
				.controls
					button#play
						i.fa.fa-play
					button#stop
						i.fa.fa-stop
				.file-operations
					button(type="link")#save
						i.fa.fa-floppy-o
					input#load-file(type="file")
					button#load
						i.fa.fa-upload
					button#clear
						i.fa.fa-trash
			.panel
				.instruments-pane
					.section
						.title Instruments
						ul.entities
							li Sampler
							li Synth
			.sequencer
				.toolbar
					.title Sequencer
					.prefs
						span Bar Count
						input#bar-count(value="16")
				.channels
					.channel#channel0
						.channel-name channel 0
						input.channel-note#channel0-note(value="C")
						.bars
							.bar.current#channel0-bar0
							.bar#channel0-bar1
							.bar#channel0-bar2
							.bar#channel0-bar3
							.bar#channel0-bar4
							.bar#channel0-bar5
							.bar#channel0-bar6
							.bar#channel0-bar7


		

		//- libs
		script(src="lib/jquery/dist/jquery.js")
		script(src="lib/lodash/lodash.js")
		script(src="lib/moment/moment.js")
		script(src="lib/audiosynth/audiosynth.js")
		script(src="lib/file-saver.js/FileSaver.js")
		//- app
		script(src="js/synths/sampler.js")
		script(src="js/synths/piano.js")
		script(src="js/init.js")